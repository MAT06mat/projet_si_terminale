#:import AppBar ui.app_bar

<LoadMenu>:
    orientation: 'vertical'
    AppBar:
        title: "Saves"
    MDScrollView:
        do_scroll_x: False
        Saves:
            id: saves
            orientation: 'vertical'
            adaptive_height: True


<NoSaveLabel>:
    text: "You haven't made any saves..."
    theme_text_color: "Secondary"
    size_hint: (1, None)
    height: "50dp"
    padding: "20dp"
    halign: "center"


<Save>:
    MDListItemHeadlineText:
        text: root.name
    MDListItemTrailingIcon:
        icon: "content-save"
