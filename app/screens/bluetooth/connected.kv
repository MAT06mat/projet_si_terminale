#:import AppBar ui.app_bar

<BluetoothConnectedScreen>:
    orientation: 'vertical'
    AppBar:
        title: "Bluetooth"
    MDBoxLayout:
        orientation: 'vertical'
        adaptive_height: True
        Widget:
            size_hint_y: None
            height: dp(10)
        MDListItem:
            on_release: root.scan_cube()
            MDListItemSupportingText:
                text: "Scan the cube"
            MDListItemTrailingIcon:
                icon: "cube-scan"
        MDListItem:
            on_release: root.solve_cube()
            MDListItemSupportingText:
                text: "Solve the cube"
            MDListItemTrailingIcon:
                icon: "cube-outline"
        MDListItem:
            on_release: root.randomize_cube()
            MDListItemSupportingText:
                text: "Randomize the cube"
            MDListItemTrailingIcon:
                icon: "autorenew"
        MDListItem:
            on_release: root.manager.bluetooth_deconnect()
            MDListItemSupportingText:
                text: "Deconnect"
            MDListItemTrailingIcon:
                icon: "bluetooth-off"
    Widget:
