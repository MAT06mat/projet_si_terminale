#:import AppBar ui.app_bar

<BluetoothRunScreen>:
    orientation: 'vertical'

    AppBar:
        title: "Bluetooth"
        icon: "arrow-left"
        when_button_click: root.manager.cancel_run

    Widget:
        size_hint_y: None
        height: dp(80)

    MDLabel:
        text: root.title
        halign: 'center'
        font_style: 'Headline'
        size_hint_y: None
        padding_y: dp(20)
        height: dp(40)

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        MDCircularProgressIndicator:
            size_hint: (.4, .4)
            line_width: dp(5)
