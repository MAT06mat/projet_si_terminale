<CustomButton>:
    color: "#3F3F3F"
    font_size: dp(20)
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.25
        BoxShadow:
            pos: self.pos
            size: self.size
            offset: 0, -dp(1)
            spread_radius: 0, 0
            border_radius: root.border_radius if root.border_radius else root.default_radius
            blur_radius: dp(7)
        Color:
            rgba: self._background
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: root.border_radius if root.border_radius else root.default_radius
